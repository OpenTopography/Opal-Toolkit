<appConfig targetNamespace="http://nbcr.sdsc.edu/opal/types">
    <metadata appName="cat">
        <usage><![CDATA[Concatenate files and print on the standard output ]]></usage>
        <info> <![CDATA[ cat [-n] [filename] ]]> </info>

        <types>

            <flags>
                <flag>
                    <id>number</id>
                    <tag>-n</tag>
                    <default>false</default>
                    <textDesc>print line number</textDesc>
                </flag>
            </flags>

            <untaggedParams>
                <param>
                    <id>inFile</id>
                    <paramType>FILE</paramType>
                    <ioType>INPUT</ioType>
                    <required>true</required>
                    <textDesc><![CDATA[Input file to cat.]]></textDesc>
                </param>
            </untaggedParams>

        </types>

    </metadata>
    <binaryLocation>/bin/cat</binaryLocation>
    <parallel>false</parallel>
</appConfig>
