<appConfig xmlns="http://nbcr.sdsc.edu/opal/types"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <metadata  appName="cat">
    <usage><![CDATA[Concatenate files and print on the standard output ]]></usage>
    <info xsd:type="xsd:string"> <![CDATA[ cat [-n] [filename] ]]> </info>

    <types>

        <flags>
            <flag>
                <id>number</id>
                <tag>-n</tag>
                <textDesc>print line number</textDesc>
                <default>false</default>
            </flag>
    </flags>

        <untaggedParams>
            <param>
                <id>inFile</id>
                <paramType>FILE</paramType>
                <ioType>INPUT</ioType>
                <required>true</required>
                <textDesc><![CDATA[Input file to cat.]]></textDesc>
            </param>
        </untaggedParams>

    </types>

  </metadata>
  <binaryLocation>/bin/cat</binaryLocation>
  <parallel>false</parallel>
</appConfig>
